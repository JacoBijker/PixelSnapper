<Window x:Class="PixelSnapper.WPF.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelSnapper.WPF.Windows"
        mc:Ignorable="d"
        Icon="../Images/TrayIcon.ico"
        Title="Pixel Snapper" Height="300" Width="560">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="General">
                <ContentControl Content="{Binding GeneralSettingsPage}" />
            </TabItem>
            <TabItem Header="Key Bindings">
                <ContentControl Content="{Binding KeybindingsPage}" />
            </TabItem>
            <TabItem Header="Color Formatting">
                <ContentControl Content="{Binding ColorFormattingPage}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
