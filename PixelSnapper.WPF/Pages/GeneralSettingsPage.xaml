<UserControl x:Class="PixelSnapper.WPF.Pages.GeneralSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelSnapper.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <CheckBox x:Name="chkRunAtStartup" Content="Run at startup" Unchecked="RunOnStartup_Checked" Checked="RunOnStartup_Checked" />
        </StackPanel>        
    </Grid>
</UserControl>
